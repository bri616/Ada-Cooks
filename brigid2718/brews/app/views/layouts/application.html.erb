<!DOCTYPE html>
<html>
<head>
  <title>AdaBrews</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<div class="container-fluid">
    <div class="header">
      <div class="brand">
        <h1><%= link_to "Ada Brews", root_path %></h1>
        <h2>homebrew recipes with lots of love</h2>
      </div>
    </div><!-- /class header -->
  </div><!-- /class container-fluid -->
<div class="container">
  <div class="row">
    <div class="main col-xs-12">
      <%= yield %>
    </div> <!-- /main col -->
  </div><!-- /row -->
</div><!-- /class container -->
</body>
</html>
