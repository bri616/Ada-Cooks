<div class="row form-group newIngredientForm">

  <div class="col-sm-4">
  <%= select_tag "recipe_form[ingredients][]",
    options_for_select(Ingredient.all.collect{ |i| [i.name, i.id]},
    { :selected => ing.ingredient.id }),
    { :class => 'form-control',}
  %>
  </div>

  <div class="col-sm-3">
    <%= text_field_tag "recipe_form[recipe_ingredient_quantity][]",
    ing.amount,
    {:class => 'form-control'} %>
  </div>

  <div class="col-sm-3">
    <%= select_tag "recipe_form[recipe_ingredient_units][]",
    options_for_select(["pounds", "ounces", "grams" ],ing.units),
    {:class => 'form-control'} %>
  </div>
  <div class="col-sm-2">
    <%= link_to "Delete", recipe_ingredient_path(ing), method: :delete, class: "btn btn-default btn-sm"  %>
  </div>
</div>
