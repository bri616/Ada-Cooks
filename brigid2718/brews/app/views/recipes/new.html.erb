<h1>New Recipe</h1>

<%= form_tag recipes_path do %>
  <div>
    <%= label_tag "recipe_form[title]", "Title" %>
    <%= text_field_tag "recipe_form[title]" %>
  </div>
  <div>
    <%= label_tag "recipe_form[instructions]", "Instructions" %>
    <%= text_area_tag "recipe_form[instructions]" %>
  </div>
  <div>
    <% Ingredient.all.each do |ingredient| %>
    <div>
      <%= check_box_tag "recipe_form[ingredients][]", ingredient.id, false, id: "ingredient_id_#{ingredient.id}" %>
      <%= label_tag "ingredient_id_#{ingredient.id}", ingredient.name %>
    </div>
    <% end %>
  </div>

  <%= submit_tag %>
<% end %>
