<h1>New Recipe</h1>

<%= form_tag recipes_path do %>
  <div>
    <%= label_tag "recipe_form[name]" %>
    <%= text_field_tag "recipe_form[name]" %>
  </div>
  <div>
    <%= label_tag "recipe_form[directions]" %>
    <%= text_area_tag "recipe_form[directions]" %>
  </div>

  <%= submit_tag %>
<% end %>
