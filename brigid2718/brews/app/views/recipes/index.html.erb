<h1>All Recipes</h1>

<% @recipes.each do |recipe| %>
<div class="row">
  <div class="col-xs-6">
    <%= link_to recipe.title, recipe_path(recipe) %>
  </div>
  <div class="col-xs-3">
    <%= link_to "Edit Recipe", edit_recipe_path(recipe), {:class => "btn btn-default btn-sm"} %>
  </div>
  <div class="col-xs-3">
    <%= button_to "Delete Recipe", recipe_path(recipe), method: :delete, class: "btn btn-default btn-sm" %>
  </div>
</div>
<% end %>
