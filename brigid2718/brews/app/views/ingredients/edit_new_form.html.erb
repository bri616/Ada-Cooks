<%= form_for obj, :html => {:role => "form"} do |f| %>
  <div class="form-group">
  <%= f.label :name %>:
  <%= f.text_field :name, :class => "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label :category %>:
  <%= f.text_field :category, :class => "form-control" %>
  </div>

  <%= f.submit "Submit", :class => "btn btn-primary" %>
<% end %>
